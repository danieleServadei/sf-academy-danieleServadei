    <script type="text/javascript">
      fetch(`${config.url}/api/balance`)
      .then((res) => {
        res.json().then((response) => {
          if (response.code == 200) {
            document.getElementById("token-balance").innerHTML = `${response.balance} SF`;
          } else {
            console.log(response.message)
          }
        });
      })
      .catch((err) => {
        console.log(`Fetch Error :-S ${err}`);
      });
    </script>
    <script>
      purchaseButton.onclick = () => {
        let value = sfInput.value;
        if (value == 0) {
          responseDiv.innerHTML = "<span style='color:#e74c3c'>Insert a valid amount</span>";
          return;
        }

        fetch(`${config.url}/api/addFounds`, {
          method: 'post',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            tokens: sfInput.value
          })
        })
        .then((res) => {
          res.json().then((response) => {
            if (response.code == 200) {
              responseDiv.innerHTML = `<span style='color:#2ecc71'>${response.message}</span>`;
            } else {
              responseDiv.innerHTML = `<span style='color:#e74c3c'>${response.error}</span>`;
            }
          });
        })
        .catch((err) => {
          console.log(`Fetch Error :-S ${err}`);
        });
      }
    </script>
    <script>
